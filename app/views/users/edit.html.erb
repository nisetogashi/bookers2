  <main>
    <% if @user.errors.any? %>
      <div class="alert alert-warning">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
              <% end %>
        </ul>
      </div>
    <% end %>

    <p id="notice"></p>
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2>User info</h2>
              <%= form_with model:@user, local:true do |f| %>
                <div><label for="inputName">Name</label></div>
                <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%></div>
                <div><label for="inputImage">Image</label></div>
                <div><%= f.attachment_field :profile_image, placeholder: "" %></div>
                <div><label for="inputIntroduction">Introduction</label></div>
                <div><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%></div>
                <div><%= f.submit "Update User", class: "btn btn-secondary" %></div>
              <% end %>
          </div>
        </div>
      </div>
  </main>