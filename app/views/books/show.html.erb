  <div class = "container">
    <div class = "row" >
      <div class = "col-md-3">

        <%= render 'books/list', book: @book_new, user: @user %>

      </div>
        <div class = "col-md-8 offset-md-1">
    <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th colspan = "3"></th>
          </tr>
        </thead>
          <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_show.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
                <%= @book_show.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
            <td><%= @book_show.body %></td>

          <% if @book_show.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book_show), class: "btn btn-secondary" %></td>
            <td><%= link_to 'Destroy', book_path(@book_show), method: :delete, class: "btn btn-secondary" %></td>
          <% end %>
          </tr>
          </tbody>
      </table>
      </div>
    </div>
  </div>

